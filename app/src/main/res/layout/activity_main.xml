<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|right"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:entries="@array/currencies" />

        <EditText
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="right"
            android:textSize="40dp"
            android:text="0" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="3"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_tumblr"
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorButtonClickHandler"
            android:text="x"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="5"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="6"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_tumblr"
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="operatorButtonClickHandler"
            android:text="/"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="7"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="8"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberButtonClickHandler"
            android:text="9"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_tumblr"
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorButtonClickHandler"
            android:text="+"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="numberButtonClickHandler"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30dp" />


        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/buttonPoint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="decimalButtonClickHandler"
            android:text="."
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/ps__button_youtube"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="deleteButtonClickHandler"
            android:text="C"
            android:textSize="30dp"
            android:id="@+id/button" />

        <Button
            android:background="@drawable/ps__button_tumblr"
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorButtonClickHandler"
            android:text="-"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/targetCurrency"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:entries="@array/currencies" />

        <Button
            android:background="@drawable/ps__button_dropbox"
            android:id="@+id/buttonEquals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="equalsButtonClickHandler"
            android:text="="
            android:textColor="#000000"
            android:textSize="40dp"
            android:textAlignment="center"
            android:padding="5dp" />
    </LinearLayout>

</LinearLayout>